        FOR Y_POS, -1 * RADIUS + SECTOR_Y_POS, RADIUS + SECTOR_Y_POS
            SIF X_POS < 0
                CONTINUE
            SIF X_POS >= MAX_SECTOR_X
                CONTINUE
            SIF Y_POS < 0
                CONTINUE
            SIF Y_POS >= MAX_SECTOR_Y
                CONTINUE
