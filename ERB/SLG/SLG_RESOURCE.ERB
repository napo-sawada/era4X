CALL INIT_ITEM_PRICE

OWNER = IS_PORT == 1 ? PORT_OWNER:PORT_ID # STAR_OWNER:PORT_ID
POSID = IS_PORT == 1 ? PORT_POSITION_ID:PORT_ID # 星系座標ID:PORT_ID
PREVIOUS_LINECOUNT = LINECOUNT

