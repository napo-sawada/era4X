;従順LvUP判定
@DECIDE_ABLUP0
;条件別にＯＫかダメかを記録する
I = 0
J = 0
K = 0
L = 0
;能力アップ可能なら1にする
Z = 0

IF ABL:0 == 0
	A = 10
	B = 10
	C = 150
	D = 100
ELSEIF ABL:0 == 1
	A = 150
	B = 100
	C = 450
	D = 600
ELSEIF ABL:0 == 2
	A = 500
	B = 300
	C = 1000
	D = 1200
ELSEIF ABL:0 == 3
	A = 3000
	B = 3000
	C = 0
	D = 0
ELSEIF ABL:0 == 4
	A = 6000
	B = 6000
	C = 0
	D = 0
ELSEIF ABL:0 == 5
	A = 8000
	B = 10000
	C = 0
	D = 0
ELSEIF ABL:0 == 6
	A = 10000
	B = 15000
	C = 0
	D = 0
ELSEIF ABL:0 == 7
	A = 14000
	B = 20000
	C = 0
	D = 0
ELSEIF ABL:0 == 8
	A = 18000
	B = 25000
	C = 0
	D = 0
ELSEIF ABL:0 == 9
	A = 25000
	B = 35000
	C = 0
	D = 0
ENDIF


;恋慕
SIF TALENT:恋慕
	TIMES B , 0.80
;親愛
SIF TALENT:親愛
	TIMES B , 0.60
;服従
SIF TALENT:服従
	TIMES A , 0.70
;隷属
SIF TALENT:隷属
	TIMES A , 0.40

;一線越えない
IF TALENT:一線越えない && (TALENT:恋慕 == 0 && TALENT:淫乱 == 0 && TALENT:服従 == 0 && TALENT:親愛 == 0 && TALENT:娼婦 == 0 && TALENT:隷属 == 0)
	TIMES A , 2.00
	TIMES B , 2.00
	TIMES C , 2.00
	TIMES D , 2.00
ENDIF

;ＬＶ４から５に上げるときは異常経験必要（素質：[臆病][素直][恋慕][親愛]なら無視できる）
IF ABL:0 == 4 && TALENT:臆病 == 0 && TALENT:素直 == 0 && TALENT:恋慕 == 0 && TALENT:親愛 == 0
	IF EXP:異常経験 == 0
		;異常経験がない
		I |= 2
		J |= 2
		K |= 2
		L |= 2
	ENDIF
;ＬＶ７から８に上げるときは異常経験3以上必要（素質：[臆病][素直][恋慕][親愛]なら無視できる）
ELSEIF ABL:0 == 7 && TALENT:臆病 == 0 && TALENT:素直 == 0 && TALENT:恋慕 == 0 && TALENT:親愛 == 0
	IF EXP:異常経験 < 3
		;異常経験が3未満
		I |= 2
		J |= 2
		K |= 2
		L |= 2
	ENDIF
ENDIF

;恐怖の珠で上げる
SIF JUEL:11 < A
	I |= 1

IF I == 0
	Z = 1
ENDIF

;恭順の珠で上げる
SIF JUEL:5 < B
	J |= 1

IF J == 0
	Z = 1
ENDIF

IF C
	;欲情の珠で上げる
	SIF JUEL:6 < C
		K |= 1

	IF K == 0
		Z = 1
	ENDIF
ELSE
	K = 256
ENDIF

IF D
	;屈服の珠で上げる
	SIF JUEL:7 < D
		L |= 1

	IF L == 0
		Z = 1
	ENDIF
ELSE
	L = 256
ENDIF
RETURN 1

