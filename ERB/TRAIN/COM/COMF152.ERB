;-------------------------------------------------
;蟲風呂
;ハードな調教コマンド、レベル4
;-------------------------------------------------
@COM152
PRINTL 蟲風呂
STR:0 = 蟲風呂
CALL KOJO_MESSAGE_COM

F = 1
;リグルとヤマメの場合は効果を変更する（蛍の妖怪と土蜘蛛の妖怪なので効き目は薄い）
;SIF NO:TARGET == 24 && NO:TARGET == 56
;	F = 0

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
IF F > 0
	;消費体力、気力
	LOSEBASE:0 += 600
	LOSEBASE:1 += 900

	SOURCE:7 = 500
	SOURCE:8 = 5000
	SOURCE:14 = 2000
	SOURCE:15 = 1000
	SOURCE:17 = 2500
	SOURCE:18 = 2500
ELSE
	;消費体力、気力
	LOSEBASE:0 += 50
	LOSEBASE:1 += 100

	SOURCE:7 = 100
	SOURCE:14 = 100
	SOURCE:15 = 20
	SOURCE:17 = 50
	SOURCE:18 = 50
ENDIF


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
IF F > 0
	;特にハードなコマンドでは、異常経験に応じて効果を減らす
	IF EXP:異常経験 < EXPLV:1
		TIMES SOURCE:8 , 1.20
		TIMES SOURCE:17 , 1.20
		TIMES SOURCE:18 , 1.20
	ELSEIF EXP:異常経験 < EXPLV:2
		TIMES SOURCE:8 , 0.90
		TIMES SOURCE:17 , 0.90
		TIMES SOURCE:18 , 0.90
	ELSEIF EXP:異常経験 < EXPLV:3
		TIMES SOURCE:8 , 0.80
		TIMES SOURCE:17 , 0.80
		TIMES SOURCE:18 , 0.80
	ELSEIF EXP:異常経験 < EXPLV:4
		TIMES SOURCE:8 , 0.70
		TIMES SOURCE:17 , 0.70
		TIMES SOURCE:18 , 0.70
	ELSEIF EXP:異常経験 < EXPLV:5
		TIMES SOURCE:8 , 0.60
		TIMES SOURCE:17 , 0.60
		TIMES SOURCE:18 , 0.60
	ELSE
		TIMES SOURCE:8 , 0.50
		TIMES SOURCE:17 , 0.50
		TIMES SOURCE:18 , 0.50
	ENDIF
ENDIF

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;粘液の汚れ
STAIN:1 = 32
STAIN:2 = 32
STAIN:3 = 32
STAIN:4 = 32
STAIN:5 = 32
STAIN:6 = 32

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;異常経験が5未満のとき、異常経験追加
IF EXP:異常経験 < 5 && F > 0
	EXP:異常経験 += 2
	PRINTL 異常経験＋２
ENDIF

;依存度ベクトル
TFLAG:33 = 5

;依存度補正値(服従で1、隷属で2）
IF TALENT:服従 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:隷属 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1

