@QUEST_ACCEPTABLE_32
SIF QUEST_PROGRESS:32 >= 5
	RETURN 0
IF QUEST_PROGRESS:32 == 4
	FOR LOCAL, 0, MAX_PORT
		SIF PORT_OWNER:LOCAL == 国家ID_プレイヤー
			RETURN 1
	NEXT
	RETURN 0
ENDIF
RETURN 1

;--------------------------
; クエストの名前を返却
;--------------------------
@QUEST_NAME_32
SELECTCASE QUEST_PROGRESS:32
	CASE 0 TO 1
		RESULTS = チュートリアル1
	CASE 2
		RESULTS = チュートリアル2
	CASE 3
		RESULTS = チュートリアル3
	CASE 4
		RESULTS = チュートリアル4
ENDSELECT
RETURN

