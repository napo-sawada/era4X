@CHECK_COUNTRY_RELATION(COUNTRY_A, COUNTRY_B)
#FUNCTION
#DIM COUNTRY_A
#DIM COUNTRY_B


SELECTCASE REL_LIKE:COUNTRY_A:COUNTRY_B
	CASE IS <= -1000
		RETURNF -1 
	CASE IS >= 1000
		RETURNF 1
	CASEELSE
		RETURNF 0
ENDSELECT

