FOR LOCAL, 0, MAX_SHIP
	IF SHIP_FOLLOW:LOCAL == SHIP_ID1
		SHIP_FOLLOW:LOCAL = SHIP_ID2
	ELSEIF SHIP_FOLLOW:LOCAL == SHIP_ID2
		SHIP_FOLLOW:LOCAL = SHIP_ID1
	ENDIF
