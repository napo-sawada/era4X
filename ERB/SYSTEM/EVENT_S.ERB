			C = COUNT
			CALL CHILD_CARE_ROOM_SELECT
		;出産後3日には育児室への訪問を問うイベント発生
		ELSEIF (CFLAG:COUNT:110 + 3) == DAY && TFLAG:701 != DAY
			DRAWLINE
			PRINTFORML %CALLNAME:COUNT%の出産から三日経ちました
			C = COUNT
			CALL CHILD_CARE_ROOM_SELECT
		;出産5日で親離れで調教可能に
		ELSEIF (CFLAG:COUNT:110 + 5) == DAY
			DRAWLINE
			C = COUNT
			CALL DEPEARENT
		ENDIF
	ENDIF
REND

