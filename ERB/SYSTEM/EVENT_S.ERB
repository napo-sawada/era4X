@START_CHARA_SELECT
TFLAG:100 = 0

REPEAT 100
	TFLAG:COUNT = ITEMSALES:COUNT
	ITEMSALES:COUNT = 0
REND

CALL CHARA_LIST
REPEAT 30
	A = COUNT + TFLAG:100 * 100 + 200
	B = TFLAG:A
	ITEMSALES:B = 1
REND


;[0]ローターが表示されるバグを防止
ITEMSALES:0 = 0
CALL START_CHARA_SHOW

$INPUT_LOOP
INPUT
IF RESULT == 1
	IF TFLAG:100 > 0
		CALL CHARA_LIST
		REPEAT 100
			A = COUNT + TFLAG:100 * 100 + 200 - 100
			B = TFLAG:A
			ITEMSALES:B = 1
		REND
		TFLAG:100 -= 1
	ENDIF
	;バグ対策。キャラ上限を超えるとITEMSALES:0が登録されるので
	ITEMSALES:0 = 0

	CALL START_CHARA_SHOW
	GOTO INPUT_LOOP
ELSEIF RESULT == 9
	;最大ページ数と比較、ページ数変動の際は
	IF TFLAG:100 < 0
		CALL CHARA_LIST
		REPEAT 100
			A = COUNT + TFLAG:100 * 100 + 200 + 100
			B = TFLAG:A
			ITEMSALES:B = 1
		REND
		TFLAG:100 += 1
	ENDIF
	;バグ対策。キャラ上限を超えるとITEMSALES:0が登録されるので
	ITEMSALES:0 = 0

	CALL START_CHARA_SHOW
	GOTO INPUT_LOOP
ELSEIF RESULT == 0
	CALL CHARA_BUY_AFTER
ELSE
	C = RESULT + 1 - 100
	D = RESULT + 1000 - 100
	E = RESULT + 5000 - 100
	;キャラがいない＝フラグ値が0なら再入力
	SIF FLAG:D == 0
		GOTO INPUT_LOOP
	ADDCHARA C
	DELCHARA 0
	MASTER = 0
	FLAG:D = 0
	FLAG:E = 1

	PRINTFORMW プレイヤーを「%NAME:MASTER%」に設定します
	;特殊キャラ時の設定を呼び出すやつっぽいんだけど、関数がないわ
	;SIF NO:MASTER == 90
	;	CALL CHARA_RANDOM_STATE_M
		
	
	;最低技巧Lv2　オトコでなければ、レズっ気Lv3にまで引き上げておく
	IF ABL:MASTER:2 < 2
		ABL:MASTER:2 = 2
		PRINTFORML ※EXモード特別仕様※　%NAME:MASTER%の%ABLNAME:2%のレベルが{ABL:MASTER:2}になりました
	ENDIF
	IF ABL:MASTER:11 < 3 && TALENT:MASTER:オトコ == 0
		ABL:MASTER:11 = 3
		PRINTFORML ※EXモード特別仕様※　%NAME:MASTER%の%ABLNAME:11%のレベルが{ABL:MASTER:11}になりました
	ENDIF
	
	$INPUT_LOOP2
	IF TALENT:MASTER:オトコ == 0
		PRINTFORML 調教者を[ふたなり]にすることができます
		PRINTFORMW %NAME:MASTER%を[ふたなり]にしますか？
		PRINTL [ 0] - ふたなり化する
		PRINTL [ 1] - ふたなり化しない
		
		INPUT
		IF RESULT == 0
			PRINTFORMW ＜%NAME:MASTER%は[ふたなり]になった＞
			TALENT:MASTER:不思議な根 = 0
			TALENT:MASTER:具現 = 0
			TALENT:MASTER:ふたなり = 1
			CFLAG:MASTER:10 += 2
		ELSEIF RESULT == 1
		;何も表示しない
		ELSE
			GOTO INPUT_LOOP2
		ENDIF
		
	ENDIF
		
	CALL CHARA_BUY_AFTER
ENDIF

