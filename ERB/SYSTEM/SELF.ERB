ELSEIF ABL:16 == 3
	A = 4
ELSEIF ABL:16 == 4
	A = 5
ELSEIF ABL:16 >= 5
	A = 6
ENDIF

;汚臭鈍感
SIF TALENT:汚臭鈍感
	A += 1
;汚臭敏感
SIF TALENT:汚臭敏感
	A -= 1
;献身的
SIF TALENT:献身的
	A += 1

SIF A == 0
	A = 1

EXP:フェラ経験 += A
EXP:精液経験 += (A+1)/2
JUEL:5 += A*100
JUEL:7 += A*30
JUEL:8 += A*40
PRINTFORML %EXPNAME:22%＋{A}
PRINTFORML %EXPNAME:20%＋{(A+1)/2}
PRINTFORML %PALAMNAME:5%の珠＋{A*100}
PRINTFORML %PALAMNAME:7%の珠＋{A*30}
PRINTFORMW %PALAMNAME:8%の珠＋{A*40}
DRAWLINE

RETURN 0


