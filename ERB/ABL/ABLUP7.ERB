;奉仕精神LvUP判定
@DECIDE_ABLUP7
;条件別にＯＫかダメかを記録する
I = 0
J = 0
K = 0
;能力アップ可能なら1にする
Z = 0

IF ABL:7 == 0
	A = 100
	B = 20
	C = 100
	D = 5
	E = 5
ELSEIF ABL:7 == 1
	A = 1200
	B = 100
	C = 0
	D = 5
	E = 10
ELSEIF ABL:7 == 2
	A = 5000
	B = 600
	C = 0
	D = 20
	E = 20
ELSEIF ABL:7 == 3
	A = 10000
	B = 2000
	C = 0
	D = 50
	E = 20
ELSEIF ABL:7 == 4
	A = 30000
	B = 8000
	C = 0
	D = 100
	E = 30
ELSEIF ABL:7 == 5
	A = 35000
	B = 8500
	C = 0
	D = 150
	E = 40
ELSEIF ABL:7 == 6
	A = 40000
	B = 10000
	C = 0
	D = 200
	E = 100
ELSEIF ABL:7 == 7
	A = 45000
	B = 15000
	C = 0
	D = 250
	E = 150
ELSEIF ABL:7 == 8
	A = 50000
	B = 20000
	C = 0
	D = 300
	E = 200
ELSEIF ABL:7 == 9
	A = 60000
	B = 30000
	C = 0
	D = 400
	E = 300
ENDIF

;恋慕
SIF TALENT:恋慕
	TIMES B , 0.80
;親愛
SIF TALENT:親愛
	TIMES B , 0.60
;服従
SIF TALENT:服従
	TIMES A , 0.70
;隷属
SIF TALENT:隷属
	TIMES A , 0.40
;一線越えない
IF TALENT:一線越えない && (TALENT:恋慕 == 0 && TALENT:淫乱 == 0 && TALENT:服従 == 0 && TALENT:親愛 == 0 && TALENT:娼婦 == 0 && TALENT:隷属 == 0)
	TIMES A , 2.00
	TIMES B , 2.00
	TIMES C , 2.00
	TIMES D , 2.00
	TIMES E , 2.00
ENDIF

;従順が奉仕精神＋１レベルでないといけない
IF ABL:0 < ABL:7+1
	;従順が不足
	I |= 4
	J |= 4
	K |= 4
ENDIF

;ＬＶ４から５に上げるときは異常経験以上必要（素質：[恋慕][親愛]なら無視できる）
IF ABL:7 == 4 && TALENT:恋慕 == 0 && TALENT:親愛 == 0
	IF EXP:異常経験 == 0
		;異常経験が不足
		I |= 2
		J |= 2
		K |= 2
	ENDIF
;ＬＶ８から９に上げるときは異常経験5以上必要（素質：[恋慕][親愛]なら無視できる）
ELSEIF ABL:7 == 8 && TALENT:恋慕 == 0 && TALENT:親愛 == 0
	IF EXP:異常経験 < 5
		;異常経験が不足
		I |= 2
		J |= 2
		K |= 2
	ENDIF
ENDIF

;屈服の珠で上げる
