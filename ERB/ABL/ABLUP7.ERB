	I |= 1
;絶頂経験が必要な場合
SIF EXP:絶頂経験 < E
	I |= 2
;精液経験が必要な場合
SIF EXP:精液経験 < E
	I |= 2

IF I == 0
	Z = 1
ENDIF

IF B > 0
	;恭順の珠で上げる
	SIF JUEL:5 < B
		J |= 1
	;この場合奉仕快楽経験が必要なことあり
	SIF EXP:奉仕快楽経験 < D
		J |= 2
	
	IF J == 0
		Z = 1
	ENDIF
ELSE
	J = 256
ENDIF

IF C > 0
	;習得の珠で上げる
	SIF JUEL:8 < C
		K |= 1
	;この場合絶頂経験が１以上必要
	SIF EXP:絶頂経験 < 1
		K |= 2

	IF K == 0
		Z = 1
	ENDIF
ELSE
	K = 256
ENDIF
RETURN 1

